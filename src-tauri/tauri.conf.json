{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "hush-whisper",
  "version": "0.1.2",
  "identifier": "com.hushin.hush-whisper",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm gen-licenses && pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "HushWhisper",
        "width": 800,
        "height": 800,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "ja-JP"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
